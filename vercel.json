{
    "version": 2,
    "builds": [
        {
            "src": "project/backend/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "project/frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "project/backend/main.py"
        },
        {
            "src": "/doc(.*)",
            "dest": "project/backend/main.py"
        },
        {
            "src": "/openapi.json",
            "dest": "project/backend/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "project/frontend/$1"
        }
    ]
}